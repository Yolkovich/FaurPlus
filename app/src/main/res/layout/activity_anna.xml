<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/materialToolbar"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:inputType="number"
        android:hint="Volvo 426 ok"
        app:endIconMode="clear_text"
        android:layout_marginTop="95dp"
        app:startIconTint="@color/GoodNews"
        app:endIconTint="@color/Mistake"
        app:startIconDrawable="@drawable/ic_ok"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"


        app:hintTextColor="@color/GoodNews"
        app:boxStrokeColor="@color/GoodNews">



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/volvo_426_ok"
            android:maxLength="10"
            android:maxLines = "1"
            android:inputType="number"
            android:fontFamily="@font/secularone_regular"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:startIconTint="@color/Mistake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Volvo 426 nok"
            app:endIconMode="clear_text"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:startIconDrawable="@drawable/ic_nok"
            app:endIconTint="@color/Mistake"

            app:hintTextColor="@color/Mistake"
            app:boxStrokeColor="@color/Mistake">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/volvo_426_nok"
                android:layout_width="match_parent"
                android:maxLength="10"
                android:maxLines = "1"
                android:inputType="number"

                android:textSize="18sp"
                android:fontFamily="@font/secularone_regular"
                android:layout_height="wrap_content"

                app:endIconTint="@color/Mistake"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="1dp"
            android:background="@color/Gray"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:inputType="phone"
            android:hint="Volvo 43X ok"
            app:endIconMode="clear_text"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            app:startIconTint="@color/GoodNews"
            app:endIconTint="@color/Mistake"
            app:startIconDrawable="@drawable/ic_ok"
            app:hintTextColor="@color/GoodNews"
            app:boxStrokeColor="@color/GoodNews">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/volvo_43x_ok"
                android:layout_width="match_parent"
                android:maxLength="10"
                android:maxLines = "1"
                android:inputType="number"

                android:textSize="18sp"
                android:fontFamily="@font/secularone_regular"
                android:layout_height="wrap_content"
                android:textColorHint="@color/ColorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:inputType="phone"
            android:hint="Volvo 43X nok"
            app:endIconMode="clear_text"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:startIconTint="@color/Mistake"
            app:endIconTint="@color/Mistake"
            app:startIconDrawable="@drawable/ic_nok"
            app:hintTextColor="@color/Mistake"
            app:boxStrokeColor="@color/Mistake">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/volvo_43x_nok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:maxLines = "1"
                android:inputType="number"
                android:fontFamily="@font/secularone_regular"

                android:textSize="18sp"
                android:textColorHint="@color/ColorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="1dp"
            android:background="@color/Gray"/>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:inputType="phone"
            android:hint="Liczba godzin.."
            app:endIconMode="clear_text"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            app:startIconTint="@color/TimeColor"
            app:endIconTint="@color/Mistake"
            app:startIconDrawable="@drawable/ic_oclock"
            app:hintTextColor="@color/TimeColor"
            app:boxStrokeColor="@color/TimeColor">



            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quantity_hours"
                android:layout_width="match_parent"
                android:maxLength="10"
                android:maxLines = "1"
                android:inputType="number"
                android:textSize="18sp"
                android:fontFamily="@font/secularone_regular"
                android:textColorLink="@color/LightBlue"

                android:layout_height="wrap_content"
                android:textColorHint="@color/ColorPrimaryDark"/>

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/ppm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/ppm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/dle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />






        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            >

            <FrameLayout
                android:background="@color/ColorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/button_anna"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <TextView
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DALEJ"
                        android:layout_centerInParent="true"
                        android:textColor="@color/ColorWhite"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                </RelativeLayout>


            </FrameLayout>


        </androidx.cardview.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>


    </ScrollView>

</com.google.android.material.appbar.MaterialToolbar>
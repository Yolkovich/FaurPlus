<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DleResult">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:focusable="false"

        android:hint="DLE"
        android:inputType="number"
        android:longClickable="false"
        android:visibility="visible"
        app:boxStrokeColor="@color/GoodNews"
        app:endIconMode="clear_text"
        app:endIconTint="@color/Mistake"
        app:startIconDrawable="@drawable/ic_ok"
        app:startIconTint="@color/GoodNews"
        tools:layout_editor_absoluteX="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dle_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:fontFamily="@font/secularone_regular"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:focusable="false"

                android:hint="JNH"
                android:inputType="number"
                android:longClickable="false"
                android:visibility="visible"
                app:boxStrokeColor="@color/GoodNews"
                app:endIconMode="clear_text"
                app:endIconTint="@color/Mistake"
                app:startIconDrawable="@drawable/ic_ok"
                app:startIconTint="@color/GoodNews"
                tools:layout_editor_absoluteX="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/jnh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:fontFamily="@font/secularone_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
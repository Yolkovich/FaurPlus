<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnaResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/gif_result"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">






            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:focusable="false"
                android:hint="PPM 426"
                android:inputType="number"
                android:longClickable="false"
                android:textColorHint="@color/black"
                android:visibility="visible"
                app:boxStrokeColor="@color/GoodNews"

                app:endIconMode="clear_text"
                app:endIconTint="@color/Mistake"
                app:startIconDrawable="@drawable/ic_ok"
                app:startIconTint="@color/GoodNews"
                tools:layout_editor_absoluteX="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ppm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:fontFamily="@font/secularone_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"

                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/GoodNews"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_margin="15dp"
                android:focusable="false"
                android:hint="PPM 43X"
                android:inputType="number"
                android:longClickable="false"
                android:textColorHint="@color/black"
                android:visibility="visible"
                app:boxStrokeColor="@color/GoodNews"

                app:endIconMode="clear_text"
                app:endIconTint="@color/Mistake"
                app:startIconDrawable="@drawable/ic_ok"
                app:startIconTint="@color/GoodNews"
                tools:layout_editor_absoluteX="15dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ppm1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:fontFamily="@font/secularone_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"

                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/GoodNews"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="15dp"
            android:focusable="false"
            android:hint="DLE:"
            android:inputType="number"
            android:longClickable="false"
            android:textColorHint="@color/black"
            android:visibility="visible"
            app:boxStrokeColor="@color/GoodNews"

            app:endIconMode="clear_text"
            app:endIconTint="@color/Mistake"
            app:startIconDrawable="@drawable/ic_ok"
            app:startIconTint="@color/GoodNews"
            tools:layout_editor_absoluteX="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:fontFamily="@font/secularone_regular"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>


    </ScrollView>



</RelativeLayout>